{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "pull-request-title-pattern": "chore(${component}): Release ${version}",
  "prerelease": false,
  "draft-pull-request": false,
  "pull-request-header": "👇 Changelog 👇",
  "include-v-in-tag": false,
  "include-component-in-tag": true,
  "pull-request-footer": "",
  "component-no-space": true,
  "packages": {
    "MiraklApi.Client": {
      "component": "MiraklClient",
      "changelog-path": "CHANGELOG.md",
      "release-type": "simple",
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false,
      "component-no-space": true,
      "extra-files": [
        {
          "type": "xml",
          "path": "/MiraklApi.Client/MiraklApi.Client.csproj",
          "xpath": "//Project/PropertyGroup/ProjectVersion"
        }
      ]
    }
  },
  "plugins": [
    "sentence-case"
  ],
  "changelog-sections": [
    {
      "type": "feat",
      "section": "🚀 Features & Enhancements",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "🐛 Bug Fixes",
      "hidden": false
    },
    {
      "type": "ci",
      "section": "🤖 CI/CD",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "🏡 Chore",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "📑 Documentation",
      "hidden": false
    },
    {
      "type": "test",
      "section": "🧪 Tests",
      "hidden": false
    },
    {
      "type": "style",
      "section": "🎨 Style",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "💅 Refactors",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "🔥 Performance",
      "hidden": false
    }
  ]
}